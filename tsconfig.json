{
    "compilerOptions": {
        "target": "ES2020",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./build"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}

